{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "default",
      "displayName": "Default (headless CLI)",
      "description": "Headless CLI tools (no raylib).",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "PROCISOCITY_BUILD_APP": "OFF",
        "PROCISOCITY_BUILD_TESTS": "OFF",
        "PROCISOCITY_BUILD_CLI": "ON"
      }
    },
    {
      "name": "app",
      "displayName": "App (raylib)",
      "description": "Interactive app (requires raylib; may use FetchContent unless PROCISOCITY_USE_SYSTEM_RAYLIB=ON).",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build-app",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "PROCISOCITY_BUILD_APP": "ON",
        "PROCISOCITY_BUILD_TESTS": "OFF",
        "PROCISOCITY_BUILD_CLI": "ON"
      }
    },
    {
      "name": "tests",
      "displayName": "Tests (headless)",
      "description": "Headless tests (no raylib).",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build-tests",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "PROCISOCITY_BUILD_APP": "OFF",
        "PROCISOCITY_BUILD_TESTS": "ON",
        "PROCISOCITY_BUILD_CLI": "ON"
      }
    },
    {
      "name": "ci",
      "displayName": "CI (fast debug tests)",
      "description": "Fast debug tests (no raylib, CLI off, glTF export off).",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build-ci",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "PROCISOCITY_BUILD_APP": "OFF",
        "PROCISOCITY_BUILD_TESTS": "ON",
        "PROCISOCITY_BUILD_CLI": "OFF",
        "PROCISOCITY_ENABLE_GLTF_EXPORT": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "configuration": "Release"
    },
    {
      "name": "app",
      "configurePreset": "app",
      "configuration": "Release"
    },
    {
      "name": "tests",
      "configurePreset": "tests",
      "configuration": "Release"
    },
    {
      "name": "ci",
      "configurePreset": "ci",
      "configuration": "Debug"
    }
  ],
  "testPresets": [
    {
      "name": "tests",
      "configurePreset": "tests",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "ci",
      "configurePreset": "ci",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
